{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": ["bun.lockb", "build", ".vscode", ".next"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"json": {
		"parser": { "allowComments": true },
		"formatter": {
			"enabled": true,
			"indentWidth": 2,
			"lineWidth": 80
		}
	}
}
